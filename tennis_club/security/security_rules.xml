<!--model_training_model-->
    <record id="training_rule_group_admin_full_access" model="ir.rule">
        <field name="name">Admin: all access for model_training_model</field>
        <field name="model_id" ref="tennis_club.model_training_model"/>
        <field name="groups" eval="[(4, ref('tennis_club.group_admin_full_access'))]"/>
        <field name="domain_force">[(1, "=", 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="training_rule_not_created" model="ir.rule">
        <field name="name">Not Created: only read access for model_training_model</field>
        <field name="model_id" ref="tennis_club.model_training_model"/>
        <field name="groups" eval="[(4, ref('tennis_club.group_not_created'))]"/>
        <field name="domain_force">[
            "&amp;",
            ("status","in",["new","unavailable"]),
            ("center_id","=",user.employee_id.working_center_id.id)
        ]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="training_rule_instructor" model="ir.rule">
        <field name="name">Instructor: limit access for model_training_model</field>
        <field name="model_id" ref="tennis_club.model_training_model"/>
        <field name="groups" eval="[(4, ref('tennis_club.group_instructor'))]"/>
       <field name="domain_force">[
            "|",
                ("instructor_id", "=", user.employee_id.id),
                "&amp;",
                    ("center_id", "=", user.employee_id.working_center_id.id),
                    ("status", "in", ["new", "unavailable"])
        ]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="training_rule_manager" model="ir.rule">
        <field name="name">Manager: full access for model_training_model</field>
        <field name="model_id" ref="tennis_club.model_training_model"/>
        <field name="groups" eval="[(4, ref('tennis_club.group_manager'))]"/>
        <field name="domain_force">[
            ("center_id", "=", user.employee_id.working_center_id.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>


