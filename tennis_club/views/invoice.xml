<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_account_move_custom" model="ir.actions.act_window">
        <field name="name">Invoice</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("move_type", "=", "out_invoice")]</field>
    </record>

    <menuitem
        id="menu_account_move_custom_root"
        name="Invoice"
        parent="account.menu_finance"
        action="action_account_move_custom"
    />

    <record id="view_account_move_custom_list" model="ir.ui.view">
        <field name="name">account.move.list.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list/field[@name='name']" position="before">
                <field name="is_paid"/>
            </xpath>
        </field>
    </record>
    <record id="view_account_move_custom_form" model="ir.ui.view">
        <field name="name">account.move.form.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group>
                    <field name="is_paid" string="Is Paid"/>
                    <field name="payment_state" string="Payment Status"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="replace">
                <field name="product_id"
                       optional="show"
                       widget="product_label_section_and_note_field"
                       domain="['|', ('center_id', '=', invoice_user_center_id), ('center_id', '=', False)]"/>
            </xpath>
            <xpath expr="//field[@name='price_unit']" position="attributes">
                <attribute name="readonly">is_special_training</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[("is_customer", "=", True)]</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_user_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
